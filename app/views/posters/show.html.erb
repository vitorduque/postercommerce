<div class="ui secondary  menu">
  <button class="ui tiny  compact abeled icon button">
    <i class="left arrow icon"></i>
    <%= link_to 'Back to list', posters_path%>
  </button>
  <a class="active item">
    Welcome Admin!
  </a>
  <%= link_to 'Poster CRUD', posters_path, class:'item' %>
  <%= link_to 'All orders', admin_orders_path, class: 'item' %>
  <%= link_to 'Analisys', analisys_path_url, class: 'item' %>
  <div class="right menu">
      <%= link_to 'Logout', admin_logout_path, class:'ui item' %><br>
  </div>
</div>
<br>
<div class="ui column stackable center page grid">
  <div class="five wide column"></div><!-- empty div just padding -->
  <div class='ui form error'>
    <div class='ui grid'>
      <div class='ui sixteen wide column form segment'>
        <a class="ui red ribbon label">Id: <%= @poster.id %></a>
        <%
          status = nil
          peq = nil
          med = nil
          gra = nil
          if @poster.active.eql? 0
            status = "No"
          else
            status = "Yes"
          end

          if @poster.small.eql? 0
            peq = "No"
          else
            peq = "Yes"
          end

          if @poster.medium.eql? 0
            med = "No"
          else
            med = "Yes"
          end

          if @poster.large.eql? 0
            gra = "No"
          else
            gra = "Yes"
          end
        %>

        <p>
          <strong>Name:</strong>
          <%= @poster.name %>
        </p>

        <p>
          <strong>Small:</strong>
          <%= peq %>
        </p>

        <p>
          <strong>Medium:</strong>
          <%= med %>
        </p>

        <p>
          <strong>Large:</strong>
          <%= gra %>
        </p>

        <p>
          <strong>Price small:</strong>
          <%= @poster.price_small %>
        </p>

        <p>
          <strong>Price medium:</strong>
          <%= @poster.price_medium %>
        </p>

        <p>
          <strong>Price large:</strong>
          <%= @poster.price_large %>
        </p>

        <p>
          <strong>Category:</strong>
          <%= @poster.category %>
        </p>

        <p>
          <strong>Created at:</strong>
          <%= @poster.created_at %>
        </p>

        <p>
          <strong>Update date:</strong>
          <%= @poster.updated_at %>
        </p>

        <p>
          <strong>Active:</strong>
          <%= status %>
        </p>
        <p>
          <strong>Original image:</strong><br>
          <img src="data:image/jpeg;charset=utf-8;base64,<%= @poster.image %>" width="300" />
        </p>
      </div>
    </div>
  </div>
</div>
