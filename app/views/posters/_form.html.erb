<%= form_for @poster,
  url: url_for(controller: params[:controller], action: params[:action]),
  method: params[:method], html: { class: 'form-control' } do |f| %>
  <%  if @poster.errors.any? %>
    <div id="error_explanation">


      <ul>
      <% @poster.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end%></ul>
    </div>
  <% end %>
  <%= f.hidden_field :id %>
  <%= f.hidden_field :created_at %>
  <%= f.hidden_field :updated_at %>
  <div class="field">
    <%= f.label :name%>
    <%= f.text_field :name%>
  </div>
  <div class="field">
    <%= f.check_box :small %>
    <%= f.label :small %>
  </div>
  <div class="field">
    <%= f.check_box :medium %>
    <%= f.label :medium %>
  </div>
  <div class="field">
    <%= f.check_box :large %>
    <%= f.label :large %>
  </div>
  <div class="field">
    <%= f.label :price_small %>
    <%= f.text_field :price_small%>
  </div>
  <div class="field">
    <%= f.label :price_medium %>
    <%= f.text_field :price_medium%>
  </div>
  <div class="field">
    <%= f.label :price_large %>
    <%= f.text_field :price_large%>
  </div>
  <div class="field">
    <%= f.label :category %>
    <%= f.select :category, options_for_select([["Movies", "Movies"], ["Animation", "Animation"], ["TV Show", "TV Show"]]) %>
  </div>
  <div class="field">
    <%= f.check_box :active %>
    <%= f.label :active %><br>
  </div>
  <div>
     <%= f.label :image %>
     <%= f.file_field :image %>
  </div>

  <div class='actions'>
  <%= f.submit 'Save'  %>
  </div>

<% end %>
