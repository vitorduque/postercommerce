Between:  <strong><%=@graph.begin%></strong> and <strong><%=@graph.end%></strong><br>
<%=image_tag(Gchart.bar(size: '500x600',
                        data: @graph.amount,
                        max_value: @graph.amount.first,
                        min_value: 0,
                        axis_with_labels: ['x', 'y'],
                        #legend: ['1 - ', '2 - ','3 - ','4 - ','5 - ','6 - '],
                        #axis_labels: [['1', '2', '3', '4', '5', '6']],
                        axis_range: [nil, [0,100,5]]
                        ))%>

<table>
  <thead>
    <tr>
      <th>Bar</th>
      <th>Combination</th>
      <th>Amount sold</th>
    </tr>
  </thead>
  <tbody>

    <%@graph.names.each_with_index do |name,index|%>
    <tr>
      <td><%=index%></td>
      <td><%=name%></td>
      <td><%=@graph.amount[index]%></td>
    </tr>
    <%end%>

  </tbody>
</table>

<hr>

<%=image_tag(Gchart.line(data: [@graph.male, @graph.female],
                         max_value: @graph.max + 1,
                         :bar_colors => ['0088FF', 'FF69B4'],
                         min_value: 0,
                         axis_with_labels: ['x', 'y'],
                         axis_range: [nil, [0,100,5]],
                         size: '500x600',
                         axis_labels: [["Jan|Feb|Mar|Apr|May|Jun|Jul|Aug|Sep|Oct|Nov|Dec"]],
                         legend:['Male', 'Female'],
                         legend_position: 'bottom'
                         ))%><br>
<table>
  <thead>
    <tr>
      <th>Sex</th>
      <th>Jan</th>
      <th>Feb</th>
      <th>Mar</th>
      <th>Apr</th>
      <th>May</th>
