      <th>Aug</th>
      <th>Sep</th>
      <th>Oct</th>
      <th>Nov</th>
      <th>Dec</th>
    </tr>
  </thead>
  <tbody>
    <td>Male</td>
    <%@graph.male.each do |m|%>
      <td><%=m%>  </td>
    <%end%>
    <tr>
      <td>Female</td>
      <%@graph.female.each do |f|%>
        <td><%=f%>  </td>
      <%end%>
    </tr>
  </tbody>
</table>

